%h1 Listing shops

%table
  %thead
    %tr
      %th Shop type
      %th Title
      %th Location
      %th Open Date
      %th When?

  %tbody
    - @shops.each do |shop|
      %tr
        %td= shop.nice_shop_type
        %td
          = link_to shop.title, shop
          by
          = shop.username
        %td= "#{shop.location_map} (#{shop.location_x}, #{shop.location_y})"
        %td
          = shop.start_date.strftime("%Y.%d.%m @ %H:%M:%S")
        %td= time_ago_in_words shop.start_date

%br

= pagy_nav(@pagy).html_safe
